<h2>List of beer clubs</h2>

<p>Number of beer clubs <%= @beer_clubs.count %></p>


<table class="table table-hover">
  <thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @beer_clubs.each do |beer_club| %>
      <tr>
        <td><%= link_to beer_club.name, beer_club %></td>
        <td><%= link_to 'Destroy', beer_club, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-danger" %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<%= link_to 'New beer club', new_beer_club_path, class:"btn btn-xs btn-primary" %>
